@model CounselorAppointment
<div class="row">
    <div class="text-center">
        <h4>Notification <i class="fa-solid fa-bell"></i></h4>
    </div>
    <div class="col-6">
        <div class="alert alert-success" @*style="border: 2px solid cornflowerblue;outline-style:solid; outline-color:aquamarine"*@>
            <div class="card-body">
                <p class="text-center" style="font-size:large">
                    You have an appointment for:
                    <br /><br />
                    @Model.Date.Day (@Model.Date.DayOfWeek) @Model.Date.ToString("MMMM") @Model.Date.Year
                </p>
            </div>
        </div>
    </div>
</div>
<br />
