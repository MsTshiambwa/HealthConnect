@{
    Layout = "_CounsellingPatient";
    ViewData["Title"] = "Index";
}



@if (TempData["appointment"] != null)
{
    <div class="row justify-content-center" style="display:flex;">
        <div class="cardNotification" style="width:450px">
            <h3 class="text-center">Notification <i class="fa-solid fa-bell"></i></h3>
            <p class="text-center">
                <br />
                You have an appointment for:
                <br />
                <b>@TempData["reason"]</b>
                <br />
                @TempData["appointment"]
            </p>
            <div class="text-center">
                <form asp-action="CancelApplication" asp-controller="Dashboard" method="post">
                    <input value="@TempData["ID"]" name="ID" hidden />
                    <button type="submit" class="btn btn-outline-danger">Cancel Appointment</button>
                </form>
            </div>
        </div>
    </div>
    <br />
}
@if (TempData["Error"] != null)
{
    <div class="text-center">
        <div class="alert alert-danger">
            <p>@TempData["Error"]</p>
        </div>
    </div>
    <br />
}

