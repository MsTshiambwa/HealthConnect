
@{
    ViewData["Title"] = "Manage Appointments";
    Layout = "_Dashboard";

}
@if (TempData["error"] != null)
{
    <div class="text-center">
        <div class="alert alert-danger">
            <p>@TempData["error"]</p>
        </div>
    </div>
    <br />
}
@if (TempData["result"] != null)
{
    <div class="text-center">
        <div class="alert alert-success">
            <p>@TempData["result"]</p>
        </div>
    </div>
    <br />
}
@model List<Appointment>
<div class="text-center">
    <h1>Manage Appointments</h1>
</div>
<br />
<div class="row">
    <div class="">
        <div class="card-body">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Date</th>
                        <th scope="col">Reason</th>
                        <th scope="col">Department</th>
                        <th scope="col">Status</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Count() > 0)
                    {
                        @foreach (var item in Model)
                        {
                            if (item.Status != "Canceled" )
                            {
                                <tr>
                                    <td>@item.Date.ToShortDateString()</td>
                                    <td>@item.Reason</td>
                                    <td>@item.Department</td>
                                    <td>@item.Status</td>
                                    <td>
                                        <div class="row">
                                            <div class="col-4">
                                                <form asp-action="EditApplication">
                                                    <input name="ID" value="@item.AppointmentID" hidden />
                                                    <button type="submit" class="btn btn-primary float-left">Edit</button>
                                                </form>
                                            </div>
                                            <div class="col-6">
                                                <form asp-action="CancelApplication">
                                                    <input name="ID" value="@item.AppointmentID" hidden />
                                                    <button type="submit" class="btn btn-danger float-right">Cancel Appointment</button>
                                                </form>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                            else
                            {
                                <tr>
                                    <td>@item.Date</td>
                                    <td>@item.Reason</td>
                                    <td>@item.Department</td>
                                    <td>@item.Status</td>
                                </tr>
                            }
                            
                        }    
                    }
                    
                </tbody>
            </table>
        </div>
    </div>
</div>

